<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/copy_magnet"
            android:layout_margin="16dp"
            android:elevation="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_content_copy_black_24dp"
            android:drawableStart="@drawable/ic_content_copy_black_24dp"
            android:drawablePadding="5dp"
            android:text="复制磁力链"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/like_magnet"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
            android:drawableStart="@drawable/ic_favorite_border_black_24dp"
            android:drawablePadding="5dp"

            android:text="加入收藏"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>