<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="allen.com.rsstest">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyAppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SearchResultTabActivity"
            android:exported="false"
            android:label="@string/title_activity_search_result_tab" />
        <activity
            android:name=".view.FileDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".view.BasicActivity"
            android:exported="false" />

        <service
            android:name=".net.NetService"
            android:enabled="true"
            android:exported="false"></service>
    </application>

</manifest>
